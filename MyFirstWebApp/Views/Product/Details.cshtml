@model MyFirstApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="text-secondary">Product Information</h5>
                        <hr class="my-2" />
                        <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
                        <p><strong>Category:</strong> @(Model.Category?.Name ?? "Uncategorized")</p>
                        <p><strong>Created On:</strong> @Model.CreatedAt.Value.ToString("MMMM dd, yyyy hh:mm tt")</p>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
