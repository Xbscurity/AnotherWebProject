@model MyFirstApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-4">
    <h1 class="mb-4">Product Details</h1>

    <!-- Product Details -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Price: $@Model.Price.ToString("F2")</p>

            <!-- Category -->
            <p><strong>Category:</strong> @(Model.Category?.Name ?? "Uncategorized")</p>
        </div>
    </div>

    <!-- Back to list link -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
